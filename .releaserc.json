{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ./.erb/scripts/sync-app-version.js"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md",
          "release/app/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "release/build/*.dmg", "label": "macOS installer (*.dmg)" },
          { "path": "release/build/*.zip", "label": "macOS zip (*.zip)" },
          {
            "path": "release/build/*.blockmap",
            "label": "Blockmap (*.blockmap)"
          },
          {
            "path": "release/build/latest*.yml",
            "label": "Auto-update manifest (latest*.yml)"
          }
        ]
      }
    ]
  ]
}
